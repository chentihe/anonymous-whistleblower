generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// author: commitment
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
  published Boolean  @default(false)
  author    String
  votes     Int      @default(0)
  voters    String[]
}
