generator client {
  provider = "prisma-client-js"
}

// TODO: using another SQL / NO-SQL?
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// author: commitment
model Post {
  id        String      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  author    String
  votes     Int
}